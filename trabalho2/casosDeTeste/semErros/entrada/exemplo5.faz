constante tempo: inteiro = 1000
constante pinoPot: inteiro = 11
constante pinoLCD: inteiro = 21

declare
	y: real

comando_setup
	
	ativar(potenciometro, pinoPot)
	ativar(lcd, pinoLCD)

fim_comando_setup

comando_loop	
	y <- ler(potenciometro, pinoPot)
	definirCor(lcd, pinoLCD, (10, 10, 10))
	imprimeLCD(y)
	esperar(tempo)
fim_comando_loop

procedimento imprimeLCD(y: real)
	declare
		mensagem: literal

	mensagem <- "Potencia dada eh " + y
	escrever(lcd, pinoLCD, mensagem)
fim_procedimento
